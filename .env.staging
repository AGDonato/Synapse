# Configuração para ambiente de staging/homologação
NODE_ENV=production
VITE_APP_ENV=staging

# API - Servidor de staging
VITE_API_BASE_URL=https://synapse-staging.example.com/api
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# WebSocket
VITE_WS_URL=wss://synapse-staging.example.com/ws
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_INTERVAL=3000

# Autenticação
VITE_AUTH_ENDPOINT=https://synapse-staging.example.com/auth
VITE_AUTH_TYPE=php
VITE_AUTH_REFRESH_THRESHOLD=300000
VITE_AUTH_SESSION_TIMEOUT=3600000

# PHP Backend
VITE_PHP_AUTH_URL=https://synapse-staging.example.com/auth/php
VITE_PHP_SESSION_NAME=PHPSESSID

# LDAP Configuration (staging)
VITE_LDAP_ENABLED=true
VITE_LDAP_URL=ldap://staging-ldap.example.com:389
VITE_LDAP_BASE_DN=dc=staging,dc=example,dc=com

# OAuth2 Configuration (staging)
VITE_OAUTH2_ENABLED=true
VITE_OAUTH2_CLIENT_ID=staging-client-id
VITE_OAUTH2_REDIRECT_URI=https://synapse-staging.example.com/callback

# Cache com Redis staging
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL=600000
VITE_CACHE_MAX_SIZE=100
VITE_REDIS_URL=redis://staging-redis.example.com:6379

# Debug limitado
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=warn
VITE_MOCK_DATA=false
VITE_SHOW_DEV_TOOLS=false

# Recursos habilitados
VITE_PWA_ENABLED=true
VITE_OFFLINE_ENABLED=true
VITE_NOTIFICATIONS_ENABLED=true
VITE_WEBSOCKET_ENABLED=true

# Monitoramento habilitado para staging
VITE_ANALYTICS_ENABLED=true
VITE_ANALYTICS_ENDPOINT=https://synapse-staging.example.com/analytics
VITE_ERROR_TRACKING_ENABLED=true
VITE_PERFORMANCE_MONITORING_ENABLED=true

# Segurança habilitada
VITE_CSRF_ENABLED=true
VITE_SECURITY_AUDIT_ENABLED=true
VITE_RATE_LIMITING_ENABLED=true
VITE_CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'

# UI
VITE_THEME_DEFAULT=light
VITE_LANGUAGE_DEFAULT=pt-BR
VITE_TIMEZONE_DEFAULT=America/Sao_Paulo

# Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,png
VITE_UPLOAD_ENDPOINT=https://synapse-staging.example.com/upload

# Recursos experimentais desabilitados
VITE_EXPERIMENTAL_FEATURES=false
VITE_BETA_FEATURES=true