# Exemplo de arquivo de configuração de ambiente
# Copie este arquivo para .env.local e configure as variáveis

# ==================== AMBIENTE ====================
NODE_ENV=development
VITE_APP_ENV=development

# ==================== API CONFIGURAÇÃO ====================
VITE_API_BASE_URL=http://localhost:8080/api
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# ==================== WEBSOCKET ====================
VITE_WS_URL=ws://localhost:8080/ws
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_INTERVAL=3000

# ==================== AUTENTICAÇÃO ====================
VITE_AUTH_ENDPOINT=http://localhost:8080/auth
VITE_AUTH_TYPE=php
VITE_AUTH_REFRESH_THRESHOLD=300000
VITE_AUTH_SESSION_TIMEOUT=3600000

# ==================== AUTENTICAÇÃO EXTERNA ====================
# PHP Backend
VITE_PHP_AUTH_URL=http://localhost:8080/auth/php
VITE_PHP_SESSION_NAME=PHPSESSID

# LDAP Configuration
VITE_LDAP_ENABLED=false
VITE_LDAP_URL=ldap://localhost:389
VITE_LDAP_BASE_DN=dc=example,dc=com

# OAuth2 Configuration
VITE_OAUTH2_ENABLED=false
VITE_OAUTH2_CLIENT_ID=your-client-id
VITE_OAUTH2_REDIRECT_URI=http://localhost:5173/callback

# SAML Configuration
VITE_SAML_ENABLED=false
VITE_SAML_ENTRY_POINT=http://localhost:8080/saml
VITE_SAML_ISSUER=synapse-app

# ==================== CACHE CONFIGURAÇÃO ====================
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL=600000
VITE_CACHE_MAX_SIZE=100
VITE_REDIS_URL=redis://localhost:6379

# ==================== MONITORAMENTO ====================
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_ENDPOINT=http://localhost:8080/analytics
VITE_ERROR_TRACKING_ENABLED=false
VITE_PERFORMANCE_MONITORING_ENABLED=false

# ==================== RECURSOS ====================
VITE_PWA_ENABLED=true
VITE_OFFLINE_ENABLED=true
VITE_NOTIFICATIONS_ENABLED=true
VITE_WEBSOCKET_ENABLED=true

# ==================== SEGURANÇA ====================
VITE_CSRF_ENABLED=true
VITE_SECURITY_AUDIT_ENABLED=false
VITE_RATE_LIMITING_ENABLED=true
VITE_CONTENT_SECURITY_POLICY=default-src 'self'

# ==================== DEBUG & DESENVOLVIMENTO ====================
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=warn
VITE_MOCK_DATA=false
VITE_SHOW_DEV_TOOLS=false

# ==================== UPLOAD DE ARQUIVOS ====================
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,png
VITE_UPLOAD_ENDPOINT=http://localhost:8080/upload

# ==================== PAGINAÇÃO ====================
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100

# ==================== UI CONFIGURAÇÕES ====================
VITE_THEME_DEFAULT=light
VITE_LANGUAGE_DEFAULT=pt-BR
VITE_TIMEZONE_DEFAULT=America/Sao_Paulo

# ==================== RECURSOS EXPERIMENTAIS ====================
VITE_EXPERIMENTAL_FEATURES=false
VITE_BETA_FEATURES=false