# Configuração para ambiente de produção
NODE_ENV=production
VITE_APP_ENV=production

# API - Servidor de produção
VITE_API_BASE_URL=https://synapse.example.com/api
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# WebSocket
VITE_WS_URL=wss://synapse.example.com/ws
VITE_WS_RECONNECT_ATTEMPTS=3
VITE_WS_RECONNECT_INTERVAL=5000

# Autenticação
VITE_AUTH_ENDPOINT=https://synapse.example.com/auth
VITE_AUTH_TYPE=php
VITE_AUTH_REFRESH_THRESHOLD=300000
VITE_AUTH_SESSION_TIMEOUT=3600000

# PHP Backend
VITE_PHP_AUTH_URL=https://synapse.example.com/auth/php
VITE_PHP_SESSION_NAME=PHPSESSID

# LDAP Configuration (produção)
VITE_LDAP_ENABLED=true
VITE_LDAP_URL=ldaps://ldap.example.com:636
VITE_LDAP_BASE_DN=dc=example,dc=com

# OAuth2 Configuration (produção)
VITE_OAUTH2_ENABLED=true
VITE_OAUTH2_CLIENT_ID=production-client-id
VITE_OAUTH2_REDIRECT_URI=https://synapse.example.com/callback

# SAML Configuration (produção)
VITE_SAML_ENABLED=true
VITE_SAML_ENTRY_POINT=https://sso.example.com/saml
VITE_SAML_ISSUER=synapse-production

# Cache com Redis cluster
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL=600000
VITE_CACHE_MAX_SIZE=200
VITE_REDIS_URL=redis://prod-redis-cluster.example.com:6379

# Debug desabilitado
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error
VITE_MOCK_DATA=false
VITE_SHOW_DEV_TOOLS=false

# Recursos habilitados
VITE_PWA_ENABLED=true
VITE_OFFLINE_ENABLED=true
VITE_NOTIFICATIONS_ENABLED=true
VITE_WEBSOCKET_ENABLED=true

# Monitoramento completo habilitado
VITE_ANALYTICS_ENABLED=true
VITE_ANALYTICS_ENDPOINT=https://synapse.example.com/analytics
VITE_ERROR_TRACKING_ENABLED=true
VITE_PERFORMANCE_MONITORING_ENABLED=true

# Segurança máxima
VITE_CSRF_ENABLED=true
VITE_SECURITY_AUDIT_ENABLED=true
VITE_RATE_LIMITING_ENABLED=true
VITE_CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self'; connect-src 'self' wss://synapse.example.com

# UI
VITE_THEME_DEFAULT=light
VITE_LANGUAGE_DEFAULT=pt-BR
VITE_TIMEZONE_DEFAULT=America/Sao_Paulo

# Upload com validação rigorosa
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx
VITE_UPLOAD_ENDPOINT=https://synapse.example.com/upload

# Recursos experimentais desabilitados
VITE_EXPERIMENTAL_FEATURES=false
VITE_BETA_FEATURES=false