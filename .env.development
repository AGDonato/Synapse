# ==================== SYNAPSE - DESENVOLVIMENTO ====================
#
# Configuração específica para ambiente de desenvolvimento local
# IMPORTANTE: Este projeto funciona apenas com MOCK DATA
#
# ====================================================================

# ==================== AMBIENTE ====================
NODE_ENV=development
VITE_APP_ENV=development

# ==================== DADOS MOCK (ATIVO) ====================
# Sistema funciona inteiramente com dados simulados
VITE_MOCK_DATA=true
VITE_USE_REAL_API=false

# ==================== DEBUG HABILITADO ====================
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug
VITE_SHOW_DEV_TOOLS=true

# ==================== UI CONFIGURAÇÕES ====================
VITE_THEME_DEFAULT=light
VITE_LANGUAGE_DEFAULT=pt-BR
VITE_TIMEZONE_DEFAULT=America/Sao_Paulo

# ==================== RECURSOS PWA ====================
VITE_PWA_ENABLED=true
VITE_OFFLINE_ENABLED=true
VITE_NOTIFICATIONS_ENABLED=true

# ==================== PAGINAÇÃO ====================
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100

# ==================== RECURSOS EXPERIMENTAIS (DEV) ====================
# Habilitados apenas para desenvolvimento e testes
VITE_EXPERIMENTAL_FEATURES=true
VITE_BETA_FEATURES=true

# ====================================================================
# NOTA: Todas as configurações de API, WebSocket, banco de dados, etc.
# estão comentadas pois não há backend implementado.
# 
# Para desenvolvimento, o sistema usa exclusivamente:
# - Mock data em src/shared/data/
# - Dados simulados realistas
# - 90%+ cobertura de testes (Vitest + RTL + Playwright)
# ====================================================================