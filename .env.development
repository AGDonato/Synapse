# Configuração para ambiente de desenvolvimento
NODE_ENV=development
VITE_APP_ENV=development

# API - Backend local
VITE_API_BASE_URL=http://localhost:8080/api
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# WebSocket
VITE_WS_URL=ws://localhost:8080/ws
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_INTERVAL=3000

# Autenticação
VITE_AUTH_ENDPOINT=http://localhost:8080/auth
VITE_AUTH_TYPE=php
VITE_AUTH_REFRESH_THRESHOLD=300000
VITE_AUTH_SESSION_TIMEOUT=3600000

# PHP Backend
VITE_PHP_AUTH_URL=http://localhost:8080/auth/php
VITE_PHP_SESSION_NAME=PHPSESSID

# Cache com Redis local
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL=300000
VITE_CACHE_MAX_SIZE=50
VITE_REDIS_URL=redis://localhost:6379

# Debug habilitado
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug
VITE_MOCK_DATA=true
VITE_SHOW_DEV_TOOLS=true

# Recursos habilitados para desenvolvimento
VITE_PWA_ENABLED=true
VITE_OFFLINE_ENABLED=true
VITE_NOTIFICATIONS_ENABLED=true
VITE_WEBSOCKET_ENABLED=true

# Monitoramento desabilitado
VITE_ANALYTICS_ENABLED=false
VITE_ERROR_TRACKING_ENABLED=false
VITE_PERFORMANCE_MONITORING_ENABLED=false

# Segurança relaxada para dev
VITE_CSRF_ENABLED=false
VITE_SECURITY_AUDIT_ENABLED=false
VITE_RATE_LIMITING_ENABLED=false

# UI
VITE_THEME_DEFAULT=light
VITE_LANGUAGE_DEFAULT=pt-BR
VITE_TIMEZONE_DEFAULT=America/Sao_Paulo

# Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,png,gif
VITE_UPLOAD_ENDPOINT=http://localhost:8080/upload

# Recursos experimentais habilitados
VITE_EXPERIMENTAL_FEATURES=true
VITE_BETA_FEATURES=true